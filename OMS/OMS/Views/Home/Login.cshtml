@model OMS.Models.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login">
    <div class="form-horizontal">
        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="U_USER_ID" class="col-md-2 control-label">UserId</label>
            <div class="col-md-10">
                <input asp-for="U_USER_ID" class="form-control" />
                <span asp-validation-for="U_USER_ID" class="text-danger"></span>
            </div>
        </div>        

        <div class="form-group">
            <label asp-for="U_PASSWORD" class="col-md-2 control-label">Password</label>
            <div class="col-md-10">
                <input asp-for="U_PASSWORD" class="form-control" />
                <span asp-validation-for="U_PASSWORD" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Register">Register</a>
</div>

