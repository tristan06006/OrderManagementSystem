@model OMS.Models.User

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register">
    @if (ViewBag.Message != null)
    {
        <div class="form-group">
            <div class="col-md-10">@ViewBag.Message</div>
       </div>
    }

    <div class="form-horizontal">
        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <label asp-for="U_USER_ID" class="col-md-2 control-label">Username</label>
            <div class="col-md-10">
                <input asp-for="U_USER_ID" class="form-control" />
                <span asp-validation-for="U_USER_ID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_NAME" class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input asp-for="U_NAME" class="form-control" />
                <span asp-validation-for="U_NAME" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_PASSWORD" class="col-md-2 control-label">Password</label>
            <div class="col-md-10">
                <input asp-for="U_PASSWORD" class="form-control" />
                <span asp-validation-for="U_PASSWORD" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_ADDRES" class="col-md-2 control-label">Address</label>
            <div class="col-md-10">
                <input asp-for="U_ADDRES" class="form-control" />
                <span asp-validation-for="U_ADDRES" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_CITY" class="col-md-2 control-label">City</label>
            <div class="col-md-10">
                <input asp-for="U_CITY" class="form-control" />
                <span asp-validation-for="U_CITY" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_STATE" class="col-md-2 control-label">State</label>
            <div class="col-md-10">
                <input asp-for="U_STATE" class="form-control" />
                <span asp-validation-for="U_STATE" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="U_ZIP" class="col-md-2 control-label">ZIP</label>
            <div class="col-md-10">
                <input asp-for="U_ZIP" class="form-control" />
                <span asp-validation-for="U_ZIP" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="U_EMAIL" class="col-md-2 control-label">Email</label>
            <div class="col-md-10">
                <input asp-for="U_EMAIL" class="form-control" />
                <span asp-validation-for="U_EMAIL" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="U_WEB" class="col-md-2 control-label">Web</label>
            <div class="col-md-10">
                <input asp-for="U_WEB" class="form-control" />
                <span asp-validation-for="U_WEB" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="U_COUNTRY" class="col-md-2 control-label">Country of Origin</label>
            <div class="col-md-10">
                <input asp-for="U_COUNTRY" class="form-control" />
                <span asp-validation-for="U_COUNTRY" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
            </div>
        </div>
       
        
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Login">Back to login</a>
</div>

